[flake8]
# Exclude virtualenv, git metadata, GitHub workflow files, and generated QR svgs
exclude =
    .venv,
    .git,
    .github,
    scripts/generated_qr,

# Historically we had a max-line-length, but this repo intentionally keeps
# some long template strings. We will enforce E501; long lines should be wrapped.
# E501 should be fixed in source; do not ignore it
ignore = E501